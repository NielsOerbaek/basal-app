# ===========================================
# Production Server (for manage-production script)
# ===========================================

PRODUCTION_HOST=basal.example.com

# ===========================================
# Django Settings
# ===========================================

# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-secret-key-here

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ===========================================
# Database (Local PostgreSQL via Docker)
# ===========================================

# Start with: docker compose up -d
DATABASE_URL=postgresql://basal:basal_local_2024@localhost:5432/basal

# ===========================================
# Email (Resend)
# ===========================================

# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxx

# Sender email (must be verified domain in Resend)
DEFAULT_FROM_EMAIL=Basal <noreply@yourdomain.com>

# BCC email for school signup confirmations (defaults to basal@sundkom.dk)
SCHOOL_SIGNUP_BCC_EMAIL=basal@sundkom.dk

# ===========================================
# Cron Jobs
# ===========================================

# Secret token for authenticating cron requests
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Also add this to GitHub repo secrets as CRON_SECRET
CRON_SECRET=your-cron-secret-here

# ===========================================
# Backblaze B2 Backup
# ===========================================

# Get these from Backblaze B2 > App Keys
B2_KEY_ID=your-key-id
B2_APPLICATION_KEY=your-application-key
B2_BUCKET_NAME=your-bucket-name
B2_ENDPOINT=https://s3.eu-central-003.backblazeb2.com

# ===========================================
# GitHub Actions Secrets (not in .env)
# ===========================================
# Add these in GitHub repo > Settings > Secrets:
#
# CRON_SECRET = (same as above)
# APP_URL = https://yourdomain.com
